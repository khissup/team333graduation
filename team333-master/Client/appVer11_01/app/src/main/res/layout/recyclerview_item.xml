<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/img_recycler"
        android:layout_alignParentLeft="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/siren_imege"
        android:paddingLeft="15dp"/>

    <TextView
        android:id="@+id/txt_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:paddingLeft="20dp"
        android:gravity="center_vertical|center_horizontal|center|fill"
        android:layout_toRightOf="@+id/img_recycler"
        android:textSize="20dp"
        android:text="recycle_name"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>