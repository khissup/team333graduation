<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainLinear"
    android:background="#FFFFFF"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_location_w"
                android:layout_width="15dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/txt_main_address"
                android:padding="5dp"
                android:textSize="17dp"
                android:textColor="#000000"
                android:text="시흥시 정왕동"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_refresh"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_autorenew_black2_18dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/BedroomRltLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_current_temp"
                android:layout_gravity="center"
                android:textSize="50dp"
                android:textColor="#000000"
                android:text="11℃"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/baseline_arrow_upward_black_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/high_temp"
                    android:padding="5dp"
                    android:textSize="17dp"
                    android:textColor="#FF0000"
                    android:text="21℃"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/baseline_arrow_downward_black_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/low_temp"
                    android:padding="5dp"
                    android:textSize="17dp"
                    android:textColor="#0100FF"
                    android:text="13℃"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_main_weather_state"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_weather_m02"
                    android:layout_width="40dp"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/txt_current_state"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:text="맑음"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/img_umbrella"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/hum1"
                    android:layout_width="40dp"
                    android:layout_height="25dp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txt_humidity_state"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:text="85%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:text="미세먼지"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_pm10Value"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:text="41㎍/㎥"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_pm10State"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:textColor="#1DDB16"
                    android:text="보통"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:text="초미세먼지"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_pm25Value"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:text="20㎍/㎥"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_pm25State"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:textColor="#1DDB16"
                    android:text="보통"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <!--4글자할시 12dp해야 칸 안벗어남-->

            </LinearLayout>



        </LinearLayout>




        <TextView
            android:id="@+id/textBedroomHum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/srcBedroom"
            android:background="#90ffffff"
            android:gravity="center"
            android:text="방"
            android:textSize="30dp"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/main_weather_time_01"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="15dp"
                android:text="09시"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/img_weather_state_01"
                android:layout_gravity="center"
                android:src="@drawable/icon_weather_s01"
                android:layout_width="35dp"
                android:layout_height="35dp" />

            <TextView
            android:id="@+id/txt_weather_temp_01"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="15dp"
            android:text="9℃"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/main_weather_time_02"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="15dp"
                android:text="12시"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/img_weather_state_02"
                android:layout_gravity="center"
                android:src="@drawable/icon_weather_s01"
                android:layout_width="35dp"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/txt_weather_temp_02"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="15dp"
                android:text="11℃"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/main_weather_time_03"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="15dp"
                android:text="15시"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/img_weather_state_03"
                android:layout_gravity="center"
                android:src="@drawable/icon_weather_s03"
                android:layout_width="35dp"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/txt_weather_temp_03"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="15dp"
                android:text="14℃"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/main_weather_time_04"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="15dp"
                android:text="18시"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/img_weather_state_04"
                android:layout_gravity="center"
                android:src="@drawable/icon_weather_s08"
                android:layout_width="35dp"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/txt_weather_temp_04"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="15dp"
                android:text="12℃"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/main_weather_time_05"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="15dp"
                android:text="21시"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/img_weather_state_05"
                android:layout_gravity="center"
                android:src="@drawable/icon_weather_s08"
                android:layout_width="35dp"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/txt_weather_temp_05"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="15dp"
                android:text="11℃"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/bedroomList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>